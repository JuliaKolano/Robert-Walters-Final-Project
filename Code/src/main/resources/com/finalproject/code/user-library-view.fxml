<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.finalproject.code.UserLibraryController">
<!--    Left side menu-->
    <left>
        <VBox prefWidth="200" styleClass="side-menu" alignment="TOP_CENTER" spacing="10">
            <!--    User profile-->
            <HBox onMouseClicked="#onUserProfileButtonClick" alignment="CENTER_LEFT" spacing="10" styleClass="user-profile">
                <ImageView fx:id="profilePicture" fitWidth="20" fitHeight="20" />
                <Label fx:id="userName" styleClass="user-name" />
            </HBox>

            <Separator styleClass="separator"/>

            <!--    Menu buttons-->
            <Button text="My library" styleClass="menu-button"/>
            <Button text="Search Books" onAction="#onSearchBooksButtonClick" styleClass="menu-button"/>
            <Button text="Reading Goal" onAction="#onReadingGoalButtonClick" styleClass="menu-button"/>
            <Button text="Recommendations" onAction="#onRecommendationsButtonClick" styleClass="menu-button"/>
            <Button text="Friends" onAction="#onFriendsButtonClick" styleClass="menu-button"/>
        </VBox>
    </left>

<!--    Main content-->
    <center>
        <StackPane styleClass="main-content">
            <Label text="My Library" styleClass="text"/>
        </StackPane>
    </center>
</BorderPane>