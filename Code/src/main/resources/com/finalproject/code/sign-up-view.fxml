<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.finalproject.code.SignUpController" alignment="CENTER" hgap="10" vgap="20" styleClass="background">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <GridPane GridPane.rowIndex="0" GridPane.columnIndex="1" vgap="10" prefWidth="400">
        <Label styleClass="title" text="Sign Up" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <HBox GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Label styleClass="subtitle" text="Already have an account? " />
            <Label onMouseClicked="#onLoginButtonClick" styleClass="login-subtitle" text="Login here"/>
        </HBox>
    </GridPane>

    <TextField styleClass="username" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Username"/>

    <PasswordField styleClass="password" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Password"/>

    <PasswordField styleClass="repeat-password" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Repeat Password"/>

    <Label styleClass="error-message" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Button styleClass="loginButton" text="Sign Up" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

</GridPane>
