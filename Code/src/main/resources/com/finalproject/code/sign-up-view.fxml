<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" styleClass="background" vgap="20" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finalproject.code.SignUpController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <GridPane prefWidth="400" vgap="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <Label styleClass="title" text="Sign Up" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label styleClass="subtitle" text="Already have an account? " />
            <Label onMouseClicked="#onLoginButtonClick" styleClass="login-subtitle" text="Login here" />
        </HBox>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <TextField fx:id="usernameField" promptText="Username" styleClass="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <PasswordField fx:id="passwordField" promptText="Password" styleClass="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <PasswordField fx:id="repeatPasswordField" promptText="Repeat Password" styleClass="repeat-password" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label fx:id="errorMessage" styleClass="error-message" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Button onAction="#onSignUpButtonClick" styleClass="sign-up-button" text="Sign Up" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
